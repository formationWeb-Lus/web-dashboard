<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard | Web GPS</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      margin: 0;
      padding: 20px;
    }
    h1, h2 {
      text-align: center;
    }
    .select-wrapper {
      text-align: center;
      margin-bottom: 20px;
    }
    select {
      padding: 8px;
      font-size: 16px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      font-size: 14px;
      text-align: center;
    }
    th {
      background-color: #f0f0f0;
    }
    .status {
      text-align: center;
      margin-top: 10px;
      font-style: italic;
    }
  </style>
</head>
<body>

  <h1>Bienvenue <%= user.firstname %> <%= user.name %></h1>

  <h2>üü° Positions de <%= selectedVehicule === 'all' ? 'tous les v√©hicules' : selectedVehicule %></h2>

  <div class="select-wrapper">
    <form method="get" action="/dashboard">
      <label for="v">V√©hicules associ√©s :</label>
      <select name="v" id="v" onchange="this.form.submit()">
        <option value="all" <%= selectedVehicule === 'all' ? 'selected' : '' %>>Tous les v√©hicules</option>
        <% vehicules.forEach(v => { %>
          <option value="<%= v.nom %>" <%= selectedVehicule === v.nom ? 'selected' : '' %>><%= v.nom %></option>
        <% }) %>
      </select>
    </form>
  </div>

  <% if (error) { %>
    <p class="status" style="color: red;"><%= error %></p>
  <% } else if (positions.length === 0) { %>
    <p class="status">Aucune position trouv√©e.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>V√©hicule</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Vitesse (km/h)</th>
          <th>Heure</th>
          <th>Adresse compl√®te</th>
          <th>Quartier</th>
          <th>Ville</th>
          <th>Territoire</th>
          <th>Province</th>
          <th>Pays</th>
        </tr>
      </thead>
      <tbody>
        <% positions.forEach((pos, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= pos.vehiculeNom %></td>
            <td><%= pos.latitude %></td>
            <td><%= pos.longitude %></td>
            <td><%= pos.vitesse || 0 %></td>
            <td><%= new Date(pos.createdat).toLocaleString('fr-FR') %></td>
            <td><%= pos.adresse || 'N/A' %></td>
            <td><%= pos.quartier || '-' %></td>
            <td><%= pos.ville || '-' %></td>
            <td><%= pos.territoire || '-' %></td>
            <td><%= pos.province || '-' %></td>
            <td><%= pos.pays || '-' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
