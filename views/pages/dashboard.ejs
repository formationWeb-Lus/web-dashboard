<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard - <%= user.firstname %> <%= user.name %></title>
  <link rel="stylesheet" href="/css/dashboard.css" />
  <style>
    .badge {
      display: inline-block;
      padding: 2px 6px;
      border-radius: 8px;
      font-size: 0.85em;
      color: white;
    }
    .badge-Mercedes06 { background-color: #007bff; }
    .badge-Toyota01 { background-color: #28a745; }
    .badge-vehicule07 { background-color: #ff9900; }
    .badge-Inconnu { background-color: #6c757d; }
  </style>
</head>
<body>
  <nav>
    <ul class="nav-links">
      <li><a href="/dashboard">📍 Position</a></li>
      <li><a href="/history">📜 Historique</a></li>
      <li><a href="/stop">⛔ Arrêt</a></li>
      <li><a href="/map">🗺️ Carte</a></li>
      <li><a href="/settings">⚙️ Paramètres</a></li>
    </ul>
  </nav>

  <h1>Bienvenue <%= user.firstname %> <%= user.name %></h1>

  <h3>Véhicules associés :</h3>
  <ul>
    <li>
      <a href="/dashboard?v=all" style="<%= (!selectedVehicule || selectedVehicule === 'all') ? 'font-weight: bold; color: green;' : '' %>">
        Tous les véhicules
      </a>
    </li>
    <% vehicules.forEach((v) => { %>
      <li>
        <a href="/dashboard?v=<%= encodeURIComponent(v) %>" style="<%= selectedVehicule === v ? 'font-weight: bold; color: green;' : '' %>">
          <%= v %>
        </a>
      </li>
    <% }) %>
  </ul>

  <% if (selectedVehicule && selectedVehicule !== 'all') { %>
    <h2>🟢 Positions du véhicule : <%= selectedVehicule %></h2>
  <% } else { %>
    <h2>🟡 Positions de tous les véhicules</h2>
  <% } %>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Véhicule</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Vitesse (km/h)</th>
        <th>Heure</th>
        <th>Adresse complète</th>
        <th>Quartier</th>
        <th>Ville</th>
        <th>Territoire</th>
        <th>Province</th>
        <th>Pays</th>
      </tr>
    </thead>
    <tbody>
      <% positions.forEach((p, index) => { 
        const nomClasse = 'badge-' + (p.vehiculeNom || 'Inconnu').replace(/\s/g, '').replace(/[^a-zA-Z0-9]/g, '');
      %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <span class="badge <%= nomClasse %>"><%= p.vehiculeNom %></span>
          </td>
          <td><%= p.latitude %></td>
          <td><%= p.longitude %></td>
          <td><%= p.vitesse || p.speed || 0 %></td>
          <td><%= p.timestamp ? new Date(p.timestamp).toLocaleString('fr-FR') : 'Date inconnue' %></td>
          <td><%= p.adresse || p.rue || "Adresse indisponible" %></td>
          <td><%= p.quartier || '-' %></td>
          <td><%= p.ville || '-' %></td>
          <td><%= p.territoire || p.comte || '-' %></td>
          <td><%= p.province || p.region || '-' %></td>
          <td><%= p.pays || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

</body>
</html>
