<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard | Web GPS</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    h1, h2 {
      text-align: center;
    }

    .select-wrapper {
      text-align: center;
      margin: 20px 0;
    }

    select {
      padding: 10px;
      font-size: 16px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #f0f0f0;
    }

    .status {
      text-align: center;
      margin-top: 20px;
      font-style: italic;
      color: #666;
    }

    .error {
      color: red;
    }
  </style>
</head>
<body>

  <h1>Bienvenue <%= user?.firstname || '' %> <%= user?.name || '' %></h1>

  <h2>üü° Positions de 
    <%= selectedVehicule && selectedVehicule !== 'all' 
      ? selectedVehicule 
      : 'tous les v√©hicules' %>
  </h2>

  <div class="select-wrapper">
    <form method="get" action="/dashboard">
      <label for="v">V√©hicules :</label>
      <select name="v" id="v" onchange="this.form.submit()">
        <option value="all" <%= selectedVehicule === 'all' ? 'selected' : '' %>>Tous les v√©hicules</option>
        <% if (vehicules && vehicules.length > 0) { %>
          <% vehicules.forEach(v => { %>
            <option value="<%= v.id %>" <%= selectedVehicule == v.id ? 'selected' : '' %>>
              <%= v.nom || ('V√©hicule ' + v.id) %>
            </option>
          <% }) %>
        <% } else { %>
          <option disabled>Aucun v√©hicule trouv√©</option>
        <% } %>
      </select>
    </form>
  </div>

  <% if (error) { %>
    <p class="status error"><%= error %></p>
  <% } else if (!vehicules || vehicules.length === 0) { %>
    <p class="status">Aucun v√©hicule trouv√©.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>V√©hicule</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Vitesse (km/h)</th>
          <th>Heure</th>
          <th>Adresse</th>
          <th>Quartier</th>
          <th>Ville</th>
          <th>Territoire</th>
          <th>Province</th>
          <th>Pays</th>
        </tr>
      </thead>
      <tbody>
        <% vehicules.forEach((v, index) => { 
             const pos = v.last_position; 
             if (!pos) return; 
        %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= v.nom || ('V√©hicule ' + v.id) %></td>
            <td><%= pos.latitude || '-' %></td>
            <td><%= pos.longitude || '-' %></td>
            <td><%= pos.vitesse || 0 %></td>
            <td><%= new Date(pos.createdat).toLocaleString('fr-FR') %></td>
            <td><%= pos.adresse || 'N/A' %></td>
            <td><%= pos.quartier || '-' %></td>
            <td><%= pos.ville || '-' %></td>
            <td><%= pos.territoire || '-' %></td>
            <td><%= pos.province || '-' %></td>
            <td><%= pos.pays || '-' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
